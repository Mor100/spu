<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e1e1e1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_tip_colcum_detail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#C70505"
            app:navigationIcon="@drawable/ic_back">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="栏目详情"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_tipoff_title"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="经视直播" />
    <FrameLayout
        android:background="#e1e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:layout_gravity="center"
            android:background="#40000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:text="栏目简介"
            android:background="#e1e1e1e1"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_tipoff_content"
        android:background="#ffffffff"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="《经视直播》是湖南卫视2004年12月18号推出的一档大型民生新闻栏目，获得“中国新闻名专栏”的称号。"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <FrameLayout
        android:background="#e1e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:layout_gravity="center"
            android:background="#40000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:text="爆料电话"
            android:background="#e1e1e1e1"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView

        android:id="@+id/tv_tipoff_phone"
        android:background="#ffffff"
        android:text="02787311111"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.spu.dong.spu.activity.kai.view.ImageViewPlus
            android:id="@+id/iv_phone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/telefono_telephone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>