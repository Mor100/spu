<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.spu.dong.spu.activity.view.AutoPlayViewPager
            android:id="@+id/tp_firstitem"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </com.spu.dong.spu.activity.view.AutoPlayViewPager>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/ll_vp_oval"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="45dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_vp_num"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textSize="14sp"
                android:textColor="@color/tab_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/tab_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="/"
                />
            <TextView
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="4"
                android:textSize="16sp"
                android:textColor="@color/tab_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_pv_title"
            android:paddingLeft="15dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/tab_write"
            android:textSize="15sp"
            android:singleLine="true"
            android:text="政治局会议一句话:地产股集体地震"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>